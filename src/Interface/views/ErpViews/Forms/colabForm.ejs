<h1 class="fs-5">Registro de colaborador</h1>
<!-- Nombres -->
<div class="mb-2">
    <label for="formControlInput" class="form-label">Nombres del colaborador:</label>
    <input type="text" class="form-control" id="" placeholder="" name="firstname">
    <label for="formControlInput" class="form-label">Apellidos:</label>
    <input type="text" class="form-control" id="" placeholder="" name="lastname">

</div class="mb-2">
<label for="formControlInput" class="form-label">Cargo:</label>
<input type="text" class="form-control" id="" placeholder="" name="position">
<div>

    <!-- Profesión -->
</div class="mb-2">
<label for="formControlInput" class="form-label">Profesión:</label>
<input type="text" class="form-control" id="" placeholder="" name="profession">
<div>

    <!-- Genero -->
    <div class="mb-2">
        <label for="input" class="col-sm-2 col-form-label">Género:</label>
        <select class="form-select" aria-label="Default select" name="gender">
        <option selected="">Seleccione una opción</option>
        <option value="Male">Masculino</option>
        <option value="Female">Femenino</option>
        <option value="Other">Otro</option>
    </select>
    </div>

</div>
<!-- Correo -->
<div class="mb-2">
    <label for="formControlInput" class="form-label">Correo electrónico:</label>
    <input type="email" class="form-control" id="" placeholder="name@example.com" name="email">
</div>
<!-- Celular -->
<div class="mb-2">
    <label for="formControlInput" class="form-label">Celular:</label>
    <input type="text" class="form-control" id="" placeholder="" name="telphone">
</div>
<!-- Password -->
<div class="mb-2">
    <label for="formControlInput" class="form-label">Asignar contraseña:</label>
    <input id="pass1" type="password" class="form-control" id="" name="passone">
    <label for="formControlInput" class="form-label">Confirmar contraseña:</label>
    <input id="passConfirm" type="password" class="form-control" id="" name="passconfirm">
</div>
<!-- Permisos otorgados -->
<div class="card mt-2 mb-2">
    <h2 class="fs-6">Asignar permisos especificos</h2>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="newColabs" value="true" id="formCheckChecked">
        <label class="form-check-label">Crear usuarios colaboradores</label>

    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="storeAndShopping" value="true" id="formCheckChecked">
        <label class="form-check-label">Registrar, Ver y editar registros de almacen y compras</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="ponds" value="true" id="formCheckChecked">
        <label class="form-check-label">Registrar, Ver y editar información de los estanques</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="batches" value="true" id="formCheckChecked">
        <label class="form-check-label">Registrar, Ver y editar información de los lotes productivos</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="sales" value="true" id="formCheckChecked">
        <label class="form-check-label">Registrar, Ver y editar información de las ventas</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="customers" value="true" id="formCheckChecked">
        <label class="form-check-label">Registrar, Ver y editar información de los clientes</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="costs" value="true" id="formCheckChecked">
        <label class="form-check-label">Ver información de los costos de producción</label>
    </div>
</div>