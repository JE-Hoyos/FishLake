<!DOCTYPE html>
<html lang="sp">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lote productivo</title>
    <link rel="shortcut icon" href="../icons/pond.png">
    <link rel="stylesheet" href="../styles/styles.css">
</head>

<body>
    <div class="container">
        <!-- Validaciones de mensaje -->
        <% if (successMessage =='success'){%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Acción realizada correctamente
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%}%>

                <% if (signUpErr =='err'){%>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        No se pudo realizar la acción, es posible que no tenga los permisos necesarios.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <%}%>
                        <!-- Navegación -->
                        <div class="row">
                            <%-include('./partials/navigation.ejs')%>
                        </div>

                        <!-- ********************** -->
                        <!-- Identificación de lote -->
                        <div class="row">
                            <p class="fs-6">Codigo del lote:
                                <%=batche._id%>
                            </p>
                        </div>
                        <!-- Información general -->
                        <div class="row">
                            <div class="card">
                                <h1 class="fs-5">Información general</h1>
                                <p class="fs-6"> <span class="fw-bold">Especie:</span>
                                    <%=batche.specie%>
                                </p>
                                <p class="fs-6"> <span class="fw-bold">fecha de inicio:</span>
                                    <%=batche.creation.reprodDate%>
                                </p>
                                <p class="fs-6"> <span class="fw-bold">Observaciones:</span>
                                    <%=batche.notes%>
                                </p>
                            </div>
                        </div>

                        <!-- ********************** -->
                        <!-- Información de reproducción -->
                        <div class="row">
                            <div class="card">

                                <div class="row">
                                    <div class="col d-flex align-items-center">
                                        <h2 class="fs-5 text-center">1. Etapa de reproducción</h2>
                                    </div>

                                    <!-- Boton -->
                                    <div class="col p-2 mt-2 d-flex flex-row-reverse">
                                        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#RepModal">(+)Estanque</button>
                                    </div>
                                </div>

                                <div class="row align-content-center">
                                    <div class="d-flex align-content-center flex-wrap">
                                        <%for(var i=0; i<batche.reproduction.broodstockponds.length; i++){%>

                                            <div class="card text-center m-1 ">
                                                <div class="d-inline-block p-2 ">

                                                    <p>
                                                        <span class="fw-bolder "> Estanque:</span>
                                                        <%=batche.reproduction.broodstockponds[i].idPond.name%>
                                                    </p>

                                                    <p>
                                                        <%= batche.reproduction.broodstockponds[i].date.getDate()%> /
                                                            <%= batche.reproduction.broodstockponds[i].date.getMonth()%> /
                                                                <%= batche.reproduction.broodstockponds[i].date.getFullYear()%>
                                                    </p>

                                                    <hr>
                                                    <p>
                                                        <span class="fw-bolder "> Hembras capturadas:</span>
                                                        <%=batche.reproduction.broodstockponds[i].nFemales%>
                                                    </p>
                                                    <p>
                                                        <span class="fw-bolder "> Machos capturados:</span>
                                                        <%=batche.reproduction.broodstockponds[i].nMales%>
                                                    </p>
                                                    <p>
                                                        <span class="fw-bolder "> Hembras fertiles:</span>
                                                        <%=batche.reproduction.broodstockponds[i].nFemalesFer%>
                                                    </p>
                                                    <p>
                                                        <span class="fw-bolder "> Machos fertiles:</span>
                                                        <%=batche.reproduction.broodstockponds[i].nMalesFer%>
                                                    </p>
                                                    <hr>
                                                    <p>
                                                        <span class="fw-bolder "> (%) Fertilidad hembras:</span>
                                                        <%=(((batche.reproduction.broodstockponds[i].nFemalesFer / batche.reproduction.broodstockponds[i].nFemales)*100)* (10 ^ 2)) / (10 ^ 2) %>
                                                    </p>

                                                    <p>
                                                        <span class="fw-bolder "> (%) Fertilidad machos:</span>
                                                        <%=Math.round(((batche.reproduction.broodstockponds[i].nMalesFer / batche.reproduction.broodstockponds[i].nMales)*100)* (10 ^ 2)) / (10 ^ 2) %>
                                                    </p>
                                                </div>
                                            </div>
                                            <%}%>
                                    </div>
                                </div>
                                <!-- Modal formulario nuevo estanque -->
                                <div class="modal fade" id="RepModal" tabindex="-1 " aria-labelledby="exampleModalLabel" aria-hidden="true ">
                                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                                        <div class="modal-content ">
                                            <div class="modal-header ">
                                                <h5 class="modal-title text-center" id="">Nuevo Estanque o Incubadora</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal " aria-label="Close "></button>
                                            </div>
                                            <div class="modal-body ">
                                                <div class="card p-2 m-2 ">
                                                    <!-- -->
                                                    <form action="/editBroodstockFishingBatche" method="post">
                                                        <%-include('./partials/broodstockFishingForm')%>
                                                </div>

                                            </div>
                                            <div class="modal-footer ">
                                                <button type="button " class="btn btn-secondary " data-bs-dismiss="modal ">Cerrar</button>
                                                <button type="submit " class="btn btn-primary ">Guardar</button>
                                            </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Etapa ovicultura -->



    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>
</body>

</html>