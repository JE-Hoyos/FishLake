<!DOCTYPE html>
<html lang="sp">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Egresos del sistema</title>

    <link rel="shortcut icon" href="./icons/pond.png">
    <link rel="stylesheet" href="../styles/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
</head>

<body>
    <!--contenedor principal  -->
    <div class="container-fluid">

        <!-- Validaciones de mensaje -->
        <% if (successMessage =='success'){%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Acci贸n realizada correctamente
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%}%>

                <% if (signUpErr =='err'){%>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        No se pudo realizar la acci贸n, es posible que no tenga los permisos necesarios.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <%}%>
                        <!-- Navegaci贸n -->
                        <div class="row">
                            <%-include('./Components/navigation.ejs')%>
                        </div>
                        <!-- cabecera -->
                        <div class="row">
                            <div class="col-10">
                                <h1>Egresos del sistema productivo</h1>
                            </div>

                            <div class="col p-2 mt-2">
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#outLayModal">(+)Egreso</button>
                            </div>

                            <!-- modal nuevo egreso -->
                            <div class="modal fade" id="outLayModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg modal-dialog-scrollable">
                                    <div class="modal-content ps-4 pe-4">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-center" id="">Nuevo egreso</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>

                                        <div class="modal-body">
                                            <div class="">

                                                <!-- formulario de nuevo egreso -->
                                                <form action="/post/newOutlay" method="post">
                                                    <%-include('./Forms/outlayForm.ejs')%>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            <button type="submit" class="btn btn-primary">Guardar</button>
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Visor de datos -->
                        <%for(var i=0; i<outlays.length; i++){%>

                            <div class="row">
                                <div class="list-group">
                                    <a href="/batcheProfile/<%=object.batches[i]._id%>" class="list-group-item list-group-item-action" aria-current="true">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h2 class="mb-1 fs-6">
                                                C贸digo de lote:
                                                <%=object.batches[i]._id%>
                                            </h2>
                                            <small>3 days ago</small>
                                        </div>
                                        <p> <span class="fw-bold">Especie:</span>
                                            <%=object.batches[i].specie%>
                                        </p>

                                    </a>

                                </div>
                            </div>
                            <%}%>

    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/i18n/defaults-*.min.js"></script>

</body>

</html>