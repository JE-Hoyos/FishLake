<!DOCTYPE html>
<html lang="sp">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lotes de producción</title>

    <link rel="shortcut icon" href="./icons/pond.png">
    <link rel="stylesheet" href="./styles/styles.css">

</head>

<body>
    <!--contenedor principal  -->
    <div class="container-fluid">

        <!-- Validaciones de mensaje -->
        <% if (successMessage =='success'){%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Acción realizada correctamente
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%}%>

                <% if (signUpErr =='err'){%>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        No se pudo realizar la acción, es posible que no tenga los permisos necesarios.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <%}%>
                        <!-- Navegación -->
                        <div class="row">
                            <%-include('./partials/navigation.ejs')%>
                        </div>
                        <!-- cabecera -->
                        <div class="row">
                            <div class="col-10">
                                <h1>Lotes de producción</h1>
                            </div>

                            <div class="col p-2 mt-2">
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#batcheModal">(+)Lote</button>
                            </div>

                            <!-- modal nuevo lote -->
                            <div class="modal fade" id="batcheModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg modal-dialog-scrollable">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-center" id="">Nueva Especie</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>

                                        <div class="modal-body">
                                            <div class="p-2 m-2">

                                                <div class="text-center mb-2">
                                                    <h1 class="fs-5 text-center mb-2">Iniciar un nuevo lote productivo</h1>
                                                    <img src="./Icons/fish2.png" alt="" width="100px" class=".align-self-center">
                                                </div>

                                                <!-- form new batche -->
                                                <form action="/newBatche" method="post">
                                                    <%-include('./partials/initBatche.ejs')%>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            <button type="submit" class="btn btn-primary">Guardar</button>
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Visor de datos -->
                        <%for(var i=0; i<object.batches.length; i++){%>

                            <div class="row">
                                <div class="list-group">
                                    <a href="/batcheProfile/<%=object.batches[i]._id%>" class="list-group-item list-group-item-action" aria-current="true">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h2 class="mb-1 fs-6">
                                                Código de lote:
                                                <%=object.batches[i]._id%>
                                            </h2>
                                            <small>3 days ago</small>
                                        </div>
                                        <p> <span class="fw-bold">Especie:</span>
                                            <%=object.batches[i].specie%>
                                        </p>

                                    </a>

                                </div>
                            </div>
                            <%}%>

    </div>
    </div>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>
</body>

</html>