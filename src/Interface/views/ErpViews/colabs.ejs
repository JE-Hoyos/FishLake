<!DOCTYPE html>
<html lang="sp">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Colaboradores</title>

    <link rel="shortcut icon" href="./icons/pond.png">
    <link rel="stylesheet" href="./styles/styles.css">

</head>

<body>
    <!--contenedor principal  -->
    <div class="container-fluid">

        <!-- Validaciones de mensaje -->
        <% if (successMessage =='success'){%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Acción realizada correctamente
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%}%>

                <% if (signUpErr =='err'){%>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        No se pudo realizar la acción, es posible que no tenga los permisos necesarios.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <%}%>

                        <!-- cabecera -->
                        <div class="row">
                            <div class="col-10">
                                <h1>Colaboradores</h1>
                            </div>

                            <div class="col mt-2 text-center">
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#SystemModal">(+)Nuevo colaborador</button>
                            </div>

                        </div>

                        <!-- Modal de registro de nuevo colaborador -->
                        <div class="modal fade" id="SystemModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-center" id="">Nuevo colaborador</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="card p-2 m-2">
                                            <!-- colabForm -->
                                            <form action="/New_colab" method="post">
                                                <%-include('./Forms/colabForm.ejs')%>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                        <button type="submit" class="btn btn-primary">Guardar</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                        <!-- Contenedor de tarjeta de datos -->
                        <div class="row row-cols-1 row-cols-sm-4 g-3 mt-5">

                            <%for(var i=0; i<colabs.length; i++){%>
                                <div class="col">
                                    <div class="card text-center">
                                        <div class="d-inline-block p-2">


                                            <%if (colabs[i].photo){%>
                                                <div class="m-2">
                                                    <img src="<%=colabs[i].photo%>" alt="" width="60px" class="rounded-circle">
                                                </div>
                                                <%}else{%>

                                                    <%if (colabs[i].gender == "Female"){%>
                                                        <div class="m-2">
                                                            <img src="./Icons/userFemale.png" alt="" width="60px" class="rounded-circle">
                                                        </div>
                                                        <%}if(colabs[i].gender =="Male"){%>
                                                            <div class="m-2">
                                                                <img src="./Icons/userMale.png" alt="" width="60px" class="rounded-circle">
                                                            </div>
                                                            <%}if(colabs[i].gender =="" || colabs[i].gender =="Other"){%>
                                                                <div class="m-2">
                                                                    <img src="./Icons/unkonow.png" alt="" width="60px" class="rounded-circle">
                                                                </div>
                                                                <%}%>
                                                                    <%}%>
                                                                        <div>

                                                                            <h3 class="fs-5">
                                                                                <%=colabs[i].name%>
                                                                                    <%=colabs[i].family_name%>
                                                                            </h3>
                                                                            <p class="fs-5 ">
                                                                                <%=colabs[i].position%>
                                                                            </p>
                                                                        </div>
                                                                        <div>
                                                                            <h3 class="fs-6">Contacto:</h3>
                                                                            <p class="fs-7">
                                                                                Email:
                                                                                <%=colabs[i].email%>
                                                                            </p>
                                                                        </div>
                                        </div>
                                    </div>
                                </div>
                                <%}%>

                        </div>


    </div>




    </div>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>
</body>

</html>